A <- matrix(c(2, 0, 1, 3), ncol = 2)
B <- matrix(c(5, 2, 4, -1), ncol = 2)
print(A)
print(B)

A_plus_B <- A + B
print(A_plus_B)

A_minus_B <- A - B
print(A_minus_B)

D <- diag(c(4, 1, 2, 3))
print(D)

my_matrix <- matrix(0, nrow = 5, ncol = 5)
diag(my_matrix) <- 3
my_matrix[1, 2:5] <- 1
my_matrix[2:5, 1] <- 2
print(my_matrix)

